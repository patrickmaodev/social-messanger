# Yarn Configuration
# This file configures Yarn for optimal performance

# Enable parallel downloads for faster installs
network-concurrency 16

# Use the most recent version of packages
enable-pre-post-scripts true

# Cache configuration
cache-folder .yarn/cache

# Enable offline mode when possible
offline false

# Enable immutable installs
enable-immutable-installs false

# Enable global cache
enable-global-cache true

# Enable network timeout
network-timeout 300000

# Enable progress bar
progress true

# Enable verbose logging
verbose false
